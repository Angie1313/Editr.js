{
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "bower": "^1.3.3",
    "catw": "^1.0.1",
    "fs-extra": "^0.16.3",
    "node-sass": "^3.4.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "axios": "^0.9.1",
    "coffee-script": "^1.10.0",
    "extend": "^3.0.0",
    "lodash": "^4.6.1",
    "promise": "^7.1.1",
    "q": "^1.4.1"
  },
  "scripts": {
    "watch-js": "watchify index.js -o ./dist/editr.min.js -v -d",
    "build-scss": "node-sass --output-style compact --source-map true --output dist/ lib/editr.scss --outFile dist/editr.min.css",
    "watch-css": "catw lib/*.css -o dist/editr.min.css -v",
    "start": "npm run watch-js & npm run watch-css"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "sourceMap": true,
          "sourceMapRelative": "."
        }
      ]
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
